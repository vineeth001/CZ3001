SRC_FILE = alu.v alu_tb.v
COM = vlog
COM_OPTS = -reportprogress 300 -work work
SIM = vsim
SIM_OPTS = -novopt work.alu_tb

open: 
	vsim

com : alu.v alu_tb.v
	$(COM) $(COM_OPTS) $(SRC_FILE)

sim : alu.v alu_tb.v
	$(SIM) $(SIM_OPTS) 
	add wave -position insert point sim:/alu_tb/*
	run 500ns

clean :
	@rm -rf sim csrc *.vcd
